generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         Bytes    @id @default(auto()) @map("_id") @db.ObjectId
  identifier String   @unique @default(uuid())
  name       String
  password   String
  role       String
  phone      String   @unique
  createdAt  DateTime @default(now())
  Doctor     Doctor?
}

model Doctor {
  id             Bytes    @id @default(auto()) @map("_id") @db.ObjectId
  userId         Bytes    @unique @db.ObjectId
  user           User     @relation(fields: [userId], references: [id])
  address        String
  specialization String
  createdAt      DateTime @default(now())
}
